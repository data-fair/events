{
  "$id": "https://github.com/data-fair/processings/api/config",
  "x-exports": [
    "types",
    "validate"
  ],
  "x-ajv": {
    "coerceTypes": "array"
  },
  "type": "object",
  "title": "Api config",
  "additionalProperties": false,
  "required": [
    "privateDirectoryUrl",
    "mongoUrl",
    "port",
    "observer",
    "secretKeys",
    "apn",
    "defaultPushNotif",
    "worker",
    "theme",
    "i18n"
  ],
  "properties": {
    "mongoUrl": {
      "type": "string"
    },
    "port": {
      "type": "number"
    },
    "privateDirectoryUrl": {
      "type": "string",
      "pattern": "^https?://"
    },
    "secretKeys": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "identities": {
          "type": ["string", "null"]
        },
        "events": {
          "type": ["string", "null"]
        },
        "sendMails": {
          "type": ["string", "null"]
        }
      }
    },
    "gcmAPIKey": {
      "type": "string"
    },
    "apn": {
      "type": "object",
      "additionalProperties": false,
      "required": ["token", "production"],
      "properties": {
        "token": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "key": {
              "type": "string"
            },
            "keyId": {
              "type": "string"
            },
            "teamId": {
              "type": "string"
            }
          }
        },
        "production": {
          "type": "boolean"
        }
      }
    },
    "defaultPushNotif": {
      "type": "object",
      "additionalProperties": false,
      "required": ["apn", "webpush"],
      "patternProperties": {
        ".*": {
          "type": "object"
        }
      }
    },
    "worker": {
      "type": "object",
      "additionalProperties": false,
      "required": ["loopInterval"],
      "properties": {
        "loopInterval": {
          "type": "number"
        }
      }
    },
    "observer": {
      "type": "object",
      "properties": {
        "active": {
          "type": "boolean"
        },
        "port": {
          "type": "number"
        }
      }
    },
    "theme": {
      "type": "object",
      "additionalProperties": false,
      "required": ["logo", "notificationIcon", "notificationBadge"],
      "properties": {
        "logo": {
          "type": ["string", "null"]
        },
        "notificationIcon": {
          "type": ["string", "null"]
        },
        "notificationBadge": {
          "type": ["string", "null"]
        }
      }
    },
    "i18n": {
      "type": "object",
      "additionalProperties": false,
      "required": ["locales", "defaultLocale"],
      "properties": {
        "locales": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "defaultLocale": {
          "type": "string",
          "default": "fr"
        }
      }
    },
    "util": {},
    "get": {},
    "has": {}
  }
}